<% @page_title = "Groupinv | Create" %>
<div class="Sign_Form">
  <h1>New Invitation to Mentor</h1>
  <%= form_for(:groupinv, :url => {:controller => 'groupinvs', :action => 'create'}) do |f| %>
    <p> Username:</br> <%= f.text_field :username%> </p>
  <p> Password:</br> <%= f.password_field :password%></p>
<p> Password Confirmation:</br> <%= f.password_field :password_confirmation%> </p>
<p> Role:</br> <%= f.select :role ,['Parent' , 'Mentor']%> </p>
<%= f.submit :Signup %>
<% end %>
</div>
