<h1>Parent Dashboard</h1>

ID: <%= @parent.user_id %><br />
Name: <%= @parent.name %><br />
Phone: <%= @parent.phone %><br />
Email: <%= @parent.email %><br />
<%= link_to "Update Personal Information", parent_edit_path %>

<h2>Children</h2>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Group</th>
    <th>Mentor</th>
    <th></th>
  </tr>
  <% @children.each do |child| %>
  <tr>
    <td><%= child.id %></td>
    <td><%= child.name %></td>
    <% if @groupnotnil %>
      <% if child.group_id == 0 %>
        <td>group id is zero</td>
        <td>Of course no mentor</td>
      <%else%>
        <td><%= child.group.title %></td>
        <td><%= child.group.mentor.name %></td>
      <% end %>
    <% else %>
      <td>No group</td>
      <td>Of course no mentor</td>
    <% end %>
    <td><%= link_to "More", child_path(child) %></td>
  </tr>
  <% end %>
</table>
<%= link_to "Add child", new_child_path %>

<h2>Groups</h2>
<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Mentor</th>
    <th>Members</th>
    <th></th>
  </tr>
  <% if @groupnotnil %>
    <% @groups.each do |group| %>
    <tr>
      <td><%= group.id %></td>
      <td><%= group.title %></td>
      <td><%= group.mentor.name %></td>
      <td><%= group.members %></td>
      <td><%= link_to "More", group_path(group) %></td>
    </tr>
    <% end %>
  <% end %>
</table>

<h2>Inbox</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Sender</th>
    <th>Mentor</th>
    <th>Member</th>
    <th>Status</th>
  </tr>
<% if @groupnotnil %>
  <% @rinv.each do |inv| %>
  <tr>
    <td><%= inv.group.title %></td>
    <td><%= link_to "#{inv.sender.name}", child_path(inv.sender) %></td>
    <td><%= inv.group.mentor.name %></td>
    <td><%= inv.group.members %></td>
    <td><%= inv.status %></td>
  </tr>
  <% end %>
<% end %>
</table>


<h2>Sent out</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Receiver</th>
    <th>Mentor</th>
    <th>Member</th>
    <th>Status</th>
  </tr>
<% if @groupnotnil %>
  <% @sinv.each do |inv| %>
  <tr>
    <td><%= inv.group.title %></td>
    <td><%= inv.receiver.name %></td>
    <td><%= inv.group.mentor.name %></td>
    <td><%= inv.group.members %></td>
    <td><%= inv.status %></td>
  </tr>
  <% end %>
<% end %>
</table>

<%= link_to "Log out", welcome_logout_path %>