<div class='row'>
<h1>Parent Dashboard</h1>
<table class='table'>
  <thead>
    <tr>
      <td>#</td>
      <td>Name</td>
      <td>Phone</td>
      <td>Email</td>
    </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @parent.user_id %></td>
    <td><%= @parent.name %></td>
    <td><%= @parent.phone %></td>
    <td><%= @parent.email %></td>
  </tr>
  </tbody>
</table>
<%= link_to "Update Personal Information", parent_edit_path , :class => 'btn btn-primary'%>
</div>

<div class='row'>
<h2>Children</h2>
<% if @children.empty? %>
  <p>None</p>
<% else %>
<table class='table table-hover'>
  <thead>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Group</th>
    <th>Mentor</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @children.each do |child| %>
  <tr>
    <td><%= child.id %></td>
    <td><%= child.name %></td>
    <% if child.group_id.nil? %>
      <td></td>
      <td></td>
    <% else %>
      <td><%= child.group.title %></td>
      <% if child.group.mentor_id.nil? %>
        <td></td>
      <% else %>
        <td><%= child.group.mentor.name %></td>
      <% end %>
    <% end %>
    <td><%= link_to "More", child_path(child) %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<% end %>
<%= link_to '<i class="fa fa-plus"></i> Add Child'.html_safe, new_child_path , :class => 'btn btn-primary'%>
</div>

<div class='row'>
<h2>Groups</h2>
<% if @groups.empty? %>
  <p>None</p>
<% else %>
<table class='table table-hover'>
  <thead>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Mentor</th>
    <th>Members</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
    <tr>
      <td><%= group.id %></td>
      <td><%= group.title %></td>
      <td><%= group.mentor.name %></td>
      <td><%= group.members %></td>
      <td><%= link_to "More", group_path(group) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
</div>

<div class='row'>
<h2>Inbox</h2>
<% if @rinv.empty? %>
  <p>None</p>
<% else %>
<table class='table table-hover'>
  <thead>
  <tr>
    <th>Title</th>
    <th>Sender</th>
    <th>Mentor</th>
    <th>Member</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <% @rinv.each do |inv| %>
  <tr>
    <td><%= inv.group.title %></td>
    <td><%= link_to "#{inv.sender.name}", child_path(inv.sender) %></td>
    <td><%= inv.group.mentor.name %></td>
    <td><%= inv.group.members %></td>
    <td><%= inv.status %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<% end %>
</div>

<div class='row'>
<h2>Sent out</h2>
<% if @sinv.empty? %>
  <p>None</p>
<% else %>
<table class='table table-hover'>
  <thead>
  <tr>
    <th>Title</th>
    <th>Receiver</th>
    <th>Mentor</th>
    <th>Member</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <% @sinv.each do |inv| %>
  <tr>
    <td><%= inv.group.title %></td>
    <td><%= inv.receiver.name %></td>
    <td><%= inv.group.mentor.name %></td>
    <td><%= inv.group.members %></td>
    <td><%= inv.status %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<% end %>
</div>
<div class='row'>
<%= link_to "Log out", welcome_logout_path , :class => 'btn btn-warning'%>
</div>