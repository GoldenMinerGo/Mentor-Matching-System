<div class='row'>
  <div class='col-sm-12'>
  <h1 align="center" class="animated fadeInDown" style=color:#339900>Edit Profile</h1>
    <br>
    <br>
    <div class="Sign_Form">
    <%= form_for @parent, :method => :put , :html => {:class => "form-horizontal"} do |f| %>
    <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
      <div class="form-group">
           <label class="control-label">All fields are required</label>
        </div>
        <div class="form-group">
         <label for="inputFirstname" class="control-label edit-font">Firstname</label>
          <%= f.text_field :firstname, :class => 'form-control'%>
        </div>
        <div class="form-group">
          <label for="inputLastname" class="control-label edit-font">Lastname</label>
         <%= f.text_field :lastname, :class => 'form-control' %>
        </div>
        <div class="form-group">
           <label for="inputPhone" class="control-label edit-font">Phone</label>
         <%= f.telephone_field :phone, :class => 'form-control'%>
        </div>
        <div class="form-group">
           <label for="inputEmail" class="control-label edit-font">Email</label>
          <%= f.email_field :email, :class => 'form-control'%>
        </div>
        <br/>
      <div class="form-group">
          <%= f.submit "UPDATE" , :class => 'btn btn-block btn-success'%>
          <%= link_to "CANCEL", parent_path, :class => 'btn btn-block btn-default' %>
       </div>
     <% end %>
     </div>
   </div>
 </div>
 </div>

