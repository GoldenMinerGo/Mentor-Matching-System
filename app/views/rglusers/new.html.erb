<!--<% @page_title = "UserAuth | Signup" %>-->
<div class="col-lg-12">
    <div class="parent-login">
      <ul class="list-inline intro-social-buttons">
       <%= link_to '<i class="fa fa-facebook fa-fw"></i><span class="network-name"> Sign up with facebook</span>'.html_safe, "/auth/facebook", id: "sign_in" , :class => 'btn btn-default btn-lg.round', :style => "background-color:#3B5998;color:white;border-color:#2B4988;"%>
          <hr class="intro-divider">
          <div class="Sign_Form">
              <h1 style="font-size:2em;">sign up with a username</h1>
                 <%= form_for(:rgluser, :url => {:controller => 'rglusers', :action => 'create'}) do |f| %>
                   <p> Username:</br> <%= f.text_field :username%> </p>
                   <p> Password:</br> <%= f.password_field :password%></p>
                   <p> Password Confirmation:</br> <%= f.password_field :password_confirmation%> </p>
             <%= f.submit :Signup %>
           <% end %>
        </div>
      </ul>
    </div>
  </div>