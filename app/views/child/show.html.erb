<div class='row'>
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6">
    <h1>Child Panel</h1>
    <div class='col-sm-12'>
      <table class='table'>
        <tbody>
          <tr>
            <td>#</td>
            <td><%= @child.id %></td>
          </tr>
          <tr>
            <td>Name</td>
            <td><%= @child.name %></td>
          </tr>
          <tr>
            <td>Gender</td>
            <td><i class='fa fa-<%= @child.gender %>'></i></td>
          </tr>
          <tr>
            <td>Age</td>
            <td><%= @child.age %></td>
          </tr>
          <tr>
            <td>School</td>
            <td><%= @child.school %></td>
          </tr>
          <tr>
            <td>Grade</td>
            <td><%= @child.grade %></td>
          </tr>
          <tr>
            <td>Time</td>
            <td><%= @child.time_slot %></td>
          </tr>
          <tr>
            <td>Competitions</td>
            <td>
              <% @child.competitions.each do |competition| %>
                <span class="label label-primary"><%= competition %></span>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>Description</td>
            <td><%= @child.description %></td>
          </tr>
          <% if @mychild %>
            <tr>
              <td>Visible</td>
              <td><i class='fa fa-eye<%= "-slash" if !@child.visible %>'></i></td>
            </tr>
          <% else %>
            <tr>
              <td>Parent</td>
              <td><%= @child.parent.name %></td>
            </tr>
            <tr>
              <td>Phone</td>
              <td><%= @child.parent.phone %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><%= @child.parent.email %></td>
            </tr>
          <% end %>
          <% if @child.group.nil? %>
            <tr>
              <td>Group</td>
              <td></td>
            </tr>
            <tr>
              <td>Mentor</td>
              <td></td>
            </tr>
          <% else %>
            <tr>
              <td>Group</td>
              <td><%= @child.group.title %></td>
            </tr>
            <tr>
              <td>Mentor</td>
              <% if @child.group.mentor.nil? %>
                <td></td>
              <% else %>
                <td><%= @child.group.mentor.name %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if @mychild %>
        <%= link_to "Edit", edit_child_path(@child) , :class => 'btn btn-block btn-primary'%>
        <%= link_to "Delete", child_path(@child), :class => 'btn btn-block btn-danger', data: {:confirm => 'Are you sure?'}, method: :delete %>
      <% end %>
      <%= link_to "Back", parent_path , :class => 'btn btn-block btn-default'%>
    </div>
  </div>
</div>
