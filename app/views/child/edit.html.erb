<div class='row'>
  <div class="col-sm-12">
    <h1 align="center" class="animated fadeInDown" style=color:#339900>Edit Child Profile</h1>
    <br/>
    <div class="Sign_Form">
      <%= form_for @child, :method => :put ,:html => {:class => "form-horizontal"} do |f| %>
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
          <div class="form-group">
            <label class="control-label">All fields are required unless marked as 'Optional'</label>
          </div>
          <div class="form-group">
            <label for="inputFirstname" class="control-label edit-font">Firstname</label>
            <%= f.text_field :firstname, :class => 'form-control'%>
          </div>
          <div class="form-group">
            <label for="inputLastname" class="control-label edit-font">Lastname</label>
            <%= f.text_field :lastname, :class => 'form-control'%>
          </div>
          <div class="form-group">
            <label for="inputGender" class="control-label edit-font">Gender</label>
            <%= f.select(:gender, ['Male' , 'Female'], {},{:class => 'form-control'})%>
          </div>
          <div class="form-group">
            <label for="inputDOB" class="control-label edit-font">Date of Birth</label>
            <%= f.date_field :date_of_birth, :class => 'form-control'%>
          </div>
          <div class="form-group">
            <label for="inputSchool" class="control-label edit-font">School:</label>
            <%= f.text_field :school , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="inputGrade" class="control-label edit-font">Grade:</label>
            <%= f.text_field :grade , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="inputCompetitions" class="control-label edit-font">Competitions</label>
            <br/>
            <label class="radio-inline"><%= f.radio_button :competitions, 'FLL'%> FIRST LEGO League</label>
            <label class="radio-inline"><%= f.radio_button :competitions, 'Junior FLL'%> FIRST LEGO League Jr.</label>
          </div>
          <div class="form-group">
            <label for="inputVisibility" class="control-label">Visibility:</label>
            <br/>
            <div class="checkbox">
              <label class="checkbox-inline">
                <%= f.check_box :visible , :checked => (@child.visible)%> Visible
            </label>
            </div>
          </div>
          <div class="form-group">
            <label for="inputDescription" class="control-label edit-font">Description(Optional):</label>
            <%= f.text_area :description, :class => 'form-control'%>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
          <div class="form-group">
            <label for="inputTimeslot" class="control-label edit-font">Time Available</label>
            <br/>
            <div class='time-board time-board-input time-board-hover' value='<%= @child.time_slot %>' inputname='child[time_slot]'></div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
          <div class="form-group">
            <br/>
            <br/>
            <%= f.submit "UPDATE",:class => 'btn btn-block btn-success'%>
            <%= link_to "CANCEL",child_path(@child),:class => 'btn btn-block btn-default'%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
