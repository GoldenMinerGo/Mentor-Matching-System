<% @page_title = "Create Group" %>
<div class="Sign_Form">
  <h1>Fill in information</h1>
  <%= form_for(:group, :url => {:controller => 'group', :action => 'create'}) do |g| %>
    <p> Title</br> <%= g.text_field :title%> </p>
    
    <%= g.submit "Create" %>
    <%= link_to "Back", parent_path %>
  <% end %>
  <% if @group.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @group.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>