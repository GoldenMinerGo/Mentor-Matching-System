<div class='row'>
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6">
    <h1>Group Update Panel</h1>
    <%= form_for @group, :method => :put , :html => {:class => "form-horizontal"} do |f| %>
      <div class="form-group">
        <label for="inputTitle" class="col-sm-4 control-label">Title:</label>
        <div class="col-sm-8"><%= f.text_field :title, :class => 'form-control'%></div>
      </div>
      <div class='form-group'>
        <label for="inputTime" class = "col-sm-4 control-label">Time Available:</label>
        <div class='time-board time-board-input time-board-hover' value='' inputname='group[time_slot]'></div>
      </div>
      <div class="form-group">
        <label for="inputCompetitions" class="col-sm-4 control-label">Competitions:</label>
        <div class="col-sm-8 col-lg-6 col-lg-offset-1">
          <label class="radio-inline"><%= f.radio_button :competitions, 'FLL'%> FIRST LEGO League</label>
          <label class="radio-inline"><%= f.radio_button :competitions, 'Junior FLL'%> FIRST LEGO League Jr.</label>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          
          <%= f.submit "Update" , :class => 'btn btn-primary btn-block'%>
          
          <%= link_to "Back", group_path(@group) , :class => 'btn btn-default btn-block'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
