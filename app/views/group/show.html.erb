
<% if @user.role == 'Parent'%>
<div class='row'>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h1>Group Information</h1>
  </div>
</div>
<div class='row'>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h2>Your Group Information</h2>
    <table class='table table-hover'>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Mentor</th>
          <th>Admin</th>
          <th>Members</th>
          
          <th>Competition</th>
          <th>More</th>
        </tr>
      </thead>
      <tbody>
        <% @group.children.each do |child| %>
          <tr>
            <td><%= @group.id %></td>
            <td><%= @group.title %></td>
            <% if @group.mentor.nil? %>
            <td> TBD </td>
            <%else%>
            <td><%= @group.mentor.name %></td>
            <% end %>
            <td><%= @group.admin.name %></td>
            <td><%= child.name %></td>
            
            <td><%= @group.competitions %></td>
            <% if @user.parent.id == @group.admin_id %>
              <td><%= link_to "Delete", {:controller => 'group', :action => 'change', :id => child.id}, data: {:confirm => 'Are you sure?'}  %></td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
          
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class='row'>
  <div class='col-xs-12 col-sm-12 col-md-12 col-lg-12'>
    <div class='time-board time-board-hover' value = '<%=@group.time_slot%>' ></div>
  </div>      
</div>

<% if @user.parent.id == @group.admin_id %>
<div class='row'>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h2>Sent In</h2>
    <% if @rinvs.empty? %>
      <p align=center>None</p>
    <% else %>
      <table class='table table-hover'>
        <thead>
          <tr>
            <th>Sender</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @rinvs.each do |rinv| %>
            <tr>
              <td><%= rinv.mentor_id %></td>
              <td><%= rinv.status %></td>
              <% if rinv.status == "Pending" %>
               <td><%= link_to "Accept", groupinvs_accept_inv_group_path(rinv)%></td>
               <td><%= link_to "Decline", groupinvs_decline_inv_path(rinv)%></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
<div class='row'>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h2>Sent Out</h2>
    <% if @sinvs.empty? %>
      <p align=center>None</p>
    <% else %>
      <table class='table table-hover'>
        <thead>
          <tr>
            <th>Receiver</th>
            <th>Status</th>
            <th>dsfdsf</th>
          </tr>
        </thead>
        <tbody>
          <% @sinvs.each do |sinv| %>
            <tr>
              <td><%= sinv.mentor_id %></td>
              <td><%= sinv.status %></td>

              <% if sinv.status == "Pending" %>

              <td><%= link_to "Cancel Invitation", groupinvs_cancel_inv_path(sinv)%></td>
              <% end %> 
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

<% session[:group_id] = @group.id %>
<%= link_to "Update Group Information", edit_group_path(@group) %><br />
<% if @group.mentor.nil? and @group.need_mentor == true %>
  <%= link_to "Browse mentors", mentors_path %><br />
<%end%>
<% session[:child_id] = @child.id %>
<% if @group.completed == false %>
<%= link_to "Browse children", child_index_path%><br />
<% end %>
<%= link_to "Close this group", { action: :destroy, id: @group.id }, data: {:confirm => 'Are you sure?'}, method: :delete %><br />
<% if @group.completed == false %>
<%= link_to "Complete",{:controller => "group", :action => "set_complete", :id => @group.id}, data: {:confirm => 'Once you click OK, your group cannot add members.'} %><br/>  
<% else if @group.need_mentor == false%>
<%= link_to "My group need a mentor",{:controller => "group", :action => "set_need_mentor", :id => @group.id}, data: {:confirm => "if you click OK, you can browse mentors and mentors can find your group." } %><br/>
<% end %>
<% end %>
<% else %>
<%= link_to "Quit this group", data: {:confirm => 'Are you sure?'} %><br/>
<% end %>
<%= link_to "Back", parent_path %> 

<% else %>

<div class='row'>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h2>Group Information</h2>
    <table class='table table-hover'>
      <thead>
        <tr>
          
          <th>Members</th>
          <th>Available time</th>
          <th>Competition</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        
        <tr>
            
          <td><%= @group.members %></td>
          <div class='time-board time-board-hover' value = '<%=@group.time_slot%>' ></div>
          <td><%= @group.competitions %></td>
          <td><%= @group.description  %></td>
        </tr>
        
      </tbody>
    </table>

  </div>
</div>

<%= link_to "Back", group_index_path %> 
<% end %>
