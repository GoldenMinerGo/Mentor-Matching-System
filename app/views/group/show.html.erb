<div class='row jumbotron'>
  <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
    <div class = "col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <h1 align="center" style="color:white;font-size:350%; line-height:200%" class="animated pulse"><b>Your Group Information</b></h1>
    </div>
  </div>
</div>
<div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
  <div class='col-sm-12'>
    <h2>
      <div style="color:#6699FF">Overview</div>
    </h2>
    <hr class="overview-divider"><br/>
    <div class="table-responsive">
      <table class='table'>
        <tbody>
          <tr>
            <td><i class="fa fa-asterisk fa-fw"></i> ID</td>
            <td><%= @group.id %></td>
          </tr>
          <tr>
            <td><i class="fa fa-bookmark fa-fw"></i> Title</td>
            <td><%= @group.title %></td>
          </tr>
          <tr>
            <td><i class="fa fa-diamond fa-fw"></i> Competition</td>
            <td><%= @group.competitions %></td>
          </tr>
          <tr>
            <td><i class="fa fa-user fa-fw"></i> Admin</td>
            <td><%= @group.admin.name %></td>
          </tr>
          <tr>
            <% if !@group.mentor.nil? %>
              <td><i class="fa fa-graduation-cap fa-fw"></i> Mentor</td>
              <td><%= @group.mentor.name %></td>
            <%else%>
              <td><i class="fa fa-graduation-cap fa-fw"></i> Mentor</td>
              <td>TBD</td>
            <%end%>
          </tr>
        </tbody>
      </table>
    </div>
    <% if @user.parent.id == @group.admin_id %>
    
      <% session[:group_id] = @group.id %>
      <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-6 col-lg-4 col-lg-offset-8">
        <p align="right"><%= link_to "Update Group Information",edit_group_path(@group) , :class => 'btn btn-primary btn-block'%></p>
        <p align="right"><%= link_to "Close this group", { action: :destroy, id: @group.id }, :class => 'btn btn-default btn-block', data: {:confirm => 'Are you sure?'}, method: :delete %></p>
      </div>
    <%end%>
  </div>
</div>
       
       <div class='row'>
      <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
      <div class="col-sm-12">
      <h2><div style="color:#6699FF">Members</div></h2>
      <hr class="overview-divider">
      <br/>
      <div class="table-responsive">
        <table class='table'>
        <thead>
          <tr>
            <th>Name</th>
            
            <th>Parent</th>
            <th>Phone</th>
            <th>Email</th>
            
            <th>More</th>
          </tr>
        </thead>
        <tbody>
          <% @group.children.each do |child| %>
            <tr>
              <td><%= child.name %></td>
              <td><%= child.parent.name %></td>
              <td><%= child.parent.phone %></td>
              <td><%= child.parent.email %></td>
              
              <% if ((@user.parent.id == @group.admin_id)  and !(child.parent.id == @user.parent.id) )%>
                <td><%= link_to "Delete", {:controller => 'group', :action => 'change', :id => child.id}, data: {:confirm => 'Are you sure?'}  %></td>
              <% else %>
                <td></td>
              <% end %>
            </tr>
          
          <% end %>
        </tbody>
      </table>
    </div>
    <% if @user.parent.id == @group.admin_id %>
    
    <% session[:group_id] = @group.id %>
    <% if @group.mentor.nil? and @group.need_mentor == true %>
    <p align="right"><%= link_to 'Browse mentors',mentors_path , :class => 'btn btn-primary'%></p>
    <%end%>
    <% if @group.completed == false %>
    <p align="right"><%= link_to 'Browse children',child_index_path , :class => 'btn btn-primary'%></p>
    <% end %>
    <% if @group.completed == false %>
    <p align="right"><%= link_to "My group doesn't need any more members",{:controller => "group", :action => "set_complete", :id => @group.id}, data: {:confirm => 'Once you click OK, your group cannot add members.'},:class => 'btn btn-primary' %></p>  
    
    <% else if @group.need_mentor == false%>
      <p align="right"><%= link_to "My group need a mentor",{:controller => "group", :action => "set_need_mentor", :id => @group.id}, data: {:confirm => "if you click OK, you can browse mentors and mentors can find your group." },:class => 'btn btn-primary' %>
      <% end %>
    <% end %>
  
  <% end %>
  </div>
  </div>
  </div>
  <br/>
  <div class='row'>
    <div class='col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1'>
      <div class='time-board time-board-hover' value = '<%=@group.time_slot%>' ></div>
    <p align="right"><%= link_to "Back", parent_path, :class => 'btn btn-primary' %></p>
    </div>      
  </div>
       
