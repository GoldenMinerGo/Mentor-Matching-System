<% @page_title = "Mentor | Signup" %>
<div class="Sign_Form">
  <h1>Fill In Information</h1>
  <%= form_for(:mentor, :url => {:controller => 'mentors', :action => 'create'}) do |f| %>
    <p> Firstname:</br> <%= f.text_field :firstname%> </p>
    <p> Lastname:</br> <%= f.text_field :lastname%></p>
    <p> Phone:</br> <%= f.telephone_field :phone%></p>
    <p> Email:</br> <%= f.email_field :email%></p>
    <p> Gender:</br> <%= f.select :gender, ['Male' , 'Female' , 'Unknown']%></p>
    <p> Date of Birth:</br> <%= f.date_field :date_of_birth%></p>
    <p> School:</br> <%= f.text_field :school%></p>
    <p> Grade:</br> <%= f.select :grade, ['Freshman' , 'Sophomore' , 'Junior' , 'Senior' , 'Graduate' , 'Teacher']%></p>
    <div class="form-group">
        <div class='time-board time-board-input time-board-hover' value='' inputname='mentor[time_slot]'></div>
    </div>
    <p> Competitions:</br> <%= f.text_field :competitions%></p>
    <p> More About Yourself:</br> <%= f.text_field :description%></p>
    <%= f.submit "Create" %>
  <% end %>
  <%= link_to "Log out", welcome_logout_path%>
  <% if @mentor.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @mentor.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>