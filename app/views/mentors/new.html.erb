<!-- <% @page_title = "Mentor | Signup" %> -->
<div class='row'>
<div class="col-sm-12">
    <h1 align="center" class="animated fadeInDown" style=color:#339900>Create Account</h1>
    <br/>
   
    <div class="Sign_Form">
     <%= form_for(:mentor, :url => {:controller => 'mentors', :action => 'create'}, :html => {:class => "form-horizontal"}) do |f| %>
     <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <div class="form-group">
           <label class="control-label">All fields are required unless marked as 'Optional'</label>
        </div>
        <div class="form-group">
          <%= f.text_field :firstname, :placeholder =>'Firstname',:class => 'form-control'%>
        </div>
      <div class="form-group">
         <%= f.text_field :lastname, :placeholder =>'Lastname',:class => 'form-control'%>
        </div>
      <div class="form-group">
         <%= f.telephone_field :phone, :placeholder =>'Phone',:class => 'form-control'%>
        </div>
        <div class="form-group">
         <%= f.email_field :email, :placeholder =>'Email',:class => 'form-control'%>
        </div>
        <div class="form-group">
         <%= f.select(:gender, ['Male' , 'Female'], {prompt:"Gender"},{:class => 'form-control'})%>
        </div>
        <div class="form-group">
         <%= f.date_field :date_of_birth, :placeholder =>'Date of Birth',:class => 'form-control'%>
        </div>
        <div class="form-group">
         <%= f.text_field :school, :placeholder =>'Department',:class => 'form-control'%>
        </div>
        <div class="form-group">
         <%= f.select(:grade,['Freshman' , 'Sophomore' , 'Junior' , 'Senior' , 'Graduate' , 'Teacher'], {prompt: "Grade"},{:class => 'form-control'})%>
        </div>
        <div class="form-group">
       <label for="inputCompetitions" class="control-label">Competitions:</label>
       <br/>
          <label class="radio-inline"><%= f.radio_button :competitions, 'FLL'%> FIRST LEGO League</label>
          <label class="radio-inline"><%= f.radio_button :competitions, 'Junior FLL'%> FIRST LEGO League Jr.</label>
    </div>
       <div class="form-group">
         <label for="inputDescription" class="control-label">Description (Optional):</label>
         <br/>
         <%= f.text_area :description, :placeholder =>'More About Yourself',:class => 'form-control'%>
        </div>
      </div>
      
    <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
        <div class="form-group">
          <label for="inputTimeslot" class="control-label">Time Available</label>
          <br/>
          <div class='time-board time-board-input time-board-hover' value='<%= @mentor.time_slot %>' inputname='mentor[time_slot]'></div>
        </div>
       </div>
       
     <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <div class="form-group">
        <%= f.submit "CREATE",:class => 'btn btn-block btn-success' %>
         <%= link_to "CANCEL", welcome_logout_path, :class =>'btn btn-block btn-default'%>
         </div>
    </div>
     <% end %>
    </div>
  </div>
</div>
     
  <% if @mentor.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @mentor.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>